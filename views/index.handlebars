<div class="container">
{{#each articles}}
    <div class="row">
        <div class="col s2">
            <div class="card blue-grey">
                <div class="card-content white-text" style="display:flex">
                    <img width="70" height="70" src="{{picUrl}}">
                    <span style="padding-left:5px">{{artTitle}}</span>
                </div>
                <p style="font-size: 10px">&nbsp;{{artDate}} ID:{{artID}}</p>
                <div class="card-action">
                    <a href="{{artUrl}}" target="_blank">READ ARTICLE</a>
                    <a href="/save/{{artID}}">SAVE</a>
                </div>
            </div>
        </div>
        <div class="col s4">
            <div class="card teal">
                <div class="card-content white-text">
                    <span style="font-size: 10px">Login/Save Article to comment</span>
                    <span class="card-title">COMMENTS <span style="font-size: 10px">&nbsp;ID:{{artID}}</span></span>
                </div>
                <div>
                    {{#each comments}}
                    <p style="font-size: 12px">{{comments.content}}</p>
                    <p style="font-size:10px"><span>{{comments.username}}</span><span>{{comments.date}}</span></p>
                    <button id={{artID}}>Remove</button>
                    {{/each}}
                </div>
                <div class="card-action">
                    <a class="modal-trigger" href="#cmntModal" >COMMENT</a>
                </div>
            </div>
        </div>
    </div>
{{/each}}
</div>


<div class="modal modal-fixed-footer" id="cmntModal">
      <!-- Modal content-->
      
        <button style="float:right" type="button" class="modal-close">&times;</button>
        <div class="comments">
            <h4 class="modal-title" style="margin-left:10px">Add Comment</h4>
        </div>
        <div class="modal-body">
            
            <form method="post" action="/comment/add/5665133">
                <div class="input-field">
                    <label for="commentarea">Comment here...</label>
                    <input style="background-color:rgb(183, 223, 217); height:150px" type="text" name="body" id="commentarea" class="materialize-input"></input>
                </div>
                <div class="modal-footer">
                    <input style="margin-right:20px" type="submit" class="modal-close btn btn-default" value="Submit">  
                </div>
            </form>
        </div>
      
</div>

<div class="modal" id="loginModal">

    <button style="float:right" type="button" class="modal-close">&times;</button>
    <div class="comments">
        <h4 class="modal-title" style="margin-left:10px">Sign In</h4>
    </div>
    <form action="/login" method="post">
        <label style="margin:20px 20px 0 20px" for="email">E-mail</label>
        <input style="margin:0 20px 0 20px" type="text" name ="email" placeholder="email">
        <label style="margin:20px 20px 0 20px" for="password">Password</label>
        <input style="margin:0 20px 0 20px" type="password" name="password" placeholder="password">
        <input style="margin:20px 20px;float:right" type="submit" class="modal-close btn btn-default" value="Login">
    </form>

</div>

<div class="modal" id="registerModal">

    <button style="float:right" type="button" class="modal-close">&times;</button>
    <div class="comments">
        <h4 class="modal-title" style="margin-left:10px">Sign In</h4>
    </div>
    <form action="/register" method="post">
        <label style="margin:20px 20px 0 20px" for="username">Username</label>
        <input style="margin:0 20px 0 20px" type="text" name="username" placeholder="Username">
        <label style="margin:20px 20px 0 20px" for="email">E-mail</label>
        <input style="margin:0 20px 0 20px" type="text" name ="email" placeholder="email">
        <label style="margin:20px 20px 0 20px" for="password">Password</label>
        <input style="margin:0 20px 0 20px" type="password" name="password" placeholder="password">
        <input style="margin:20px 20px;float:right" type="submit" class="modal-close btn btn-default" value="Register">
    </form>

</div>