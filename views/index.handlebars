<div class="container">
{{#each articles}}
    <div class="row">
        <div class="col s2">
            <div class="card blue-grey">
                <div class="card-content white-text" style="display:flex">
                    <img width="70" height="70" src="{{picUrl}}">
                    <span style="padding-left:5px">{{artTitle}}</span>
                </div>
                <p style="font-size: 10px">&nbsp;{{artDate}} ID:{{artID}}</p>
                <div class="card-action">
                    <a href="{{artUrl}}" target="_blank">READ ARTICLE</a>
                    <a href="/save/{{artID}}">SAVE</a>
                </div>
            </div>
        </div>
        <div class="col s4">
            <div class="card teal">
                <div class="card-content white-text">
                    <span style="font-size: 10px">Login/Save Article to comment</span>
                    <span class="card-title">COMMENTS <span style="font-size: 10px">&nbsp;ID:{{artID}}</span></span>
                </div>
                <div>
                    {{#each articles.comment}}
                    <p style="font-size: 12px">{{comment}}</p>
                    <p style="font-size:10px"><span>{{madeBy.username}}</span><span>{{dateCreated}}</span></p>
                    {{/each}}
                </div>
                <div class="card-action">
                    <a class="modal-trigger" href="#cmntModal" >VIEW ALL</a>
                </div>
            </div>
        </div>
    </div>
{{/each}}
</div>


<div class="modal modal-fixed-footer" id="cmntModal">
      <!-- Modal content-->
      
        <button style="float:right" type="button" class="modal-close">&times;</button>
        <div class="comments">
            <h4 class="modal-title" style="margin-left:10px">Comments</h4>
        </div>
        <div class="modal-body">
            <ul>
                <p>Comments will be listed here...</p>
                {{#each comments}}
                <p>{{body}}</p>
                {{/each}}
            </ul>
            <form method="post" action="/comment/add/{{articles.artID}}">
                <div class="input-field">
                    <label for="commentarea">Comment here...</label>
                    <input style="background-color:rgb(183, 223, 217); height:100px" type="text" name="body" id="commentarea" class="materialize-input"></input>
                </div>
                <div class="modal-footer">
                    <input style="margin-right:20px" type="submit" class="modal-close btn btn-default" value="Submit">  
                </div>
            </form>
        </div>
      
</div>

<div class="modal" id="loginModal">

    <form action="/login" method="post">
        <input type="text" name="username" placeholder="username">
        <input type="password" name="password" placeholder="password">
        <input type="text" name ="email" placeholder="email">
        <input type="submit" class="modal-close btn btn-default" value="Submit">
    </form>

</div>